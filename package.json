{
  "description": "Lib starter kit",
  "author": "Igor Suvorov <hi@isuvorov.com>",
  "license": "MIT",
  "repository": "https://github.com/isuvorov/lib-starter-kit",
  "keywords": [],
  "scripts": {
    "dev": "npm run watch",
    "dev:lib1": "npm run watch --scope @lib-initial-kit/lib1",
    "release": "lerna publish --skip-npm",
    "bootstrap": "lerna run bootstrap",
    "build": "lerna run build",
    "watch": "lerna run dev",
    "link": "lerna run link",
    "bump": "lerna run bump",
    "dev2": "concurrently --kill-others \"npm dev:ts\" \"npm dev:js\"",
    "dev:js": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-js.js",
    "dev:ts": "lerna exec --parallel -- cross-env-shell node \\$LERNA_ROOT_PATH/scripts/watch-ts.js",
    "lint:ci": "npm lint:js --format ./node_modules/eslint-teamcity/index.js . && npm lint:ts **/*.ts && npm lint:md .",
    "lint:js": "cross-env NODE_ENV=production eslint --cache --cache-location=.cache/eslint --ext .js,.jsx,.json,.html --report-unused-disable-directives .",
    "lint:md": "remark -q",
    "lint:ts": "tslint -p . -c tslint.json -t stylish",
    "publish:latest": "lerna publish --exact --concurrency 1 --force-publish",
    "publish:next": "npm run publish:latest -- --npm-tag=next",
    "publish:debug": "npm run publish:latest -- --npm-tag=debug --no-push",
    "test-latest-cra": "npm --prefix --cwd lib/cli run test-latest-cra",
    "test:cli": "npm --prefix lib/cli run test",
    "lint-staged": "lint-staged",
    "custom": "lerna exec --scope @lskjs/ui -- \\$LERNA_ROOT_PATH/scripts/package-watch.sh",
    "custom2": "lerna exec --scope @lskjs/general -- \\$LERNA_ROOT_PATH/scripts/package-watch.sh"
  },
  "files": [
    "build/"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "linters": {
      "*.js": [
        "npm lint:js --fix",
        "git add"
      ],
      "*.ts": [
        "npm lint:ts --fix",
        "git add"
      ],
      "*.json": [
        "npm lint:js --fix",
        "git add"
      ]
    }
  },
  "dependencies": {},
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.2.2",
    "@babel/plugin-proposal-class-properties": "^7.2.3",
    "@babel/plugin-proposal-decorators": "^7.2.3",
    "@babel/plugin-proposal-export-namespace-from": "^7.2.0",
    "@babel/plugin-proposal-function-bind": "^7.2.0",
    "@babel/plugin-proposal-optional-chaining": "^7.2.0",
    "@babel/plugin-syntax-dynamic-import": "^7.2.0",
    "@babel/plugin-transform-modules-commonjs": "^7.2.0",
    "@babel/plugin-transform-runtime": "^7.2.0",
    "@babel/polyfill": "^7.2.5",
    "@babel/preset-env": "^7.2.3",
    "@babel/preset-react": "7.0.0-beta.42",
    "@babel/runtime": "7.1.5",
    "jest": "23.6.0",
    "babel-eslint": "8.2.3",
    "babel-plugin-emotion": "9.2.11",
    "babel-plugin-transform-class-property-arrow-to-bind": "^1.1.0",
    "cross-env": "^5.2.0",
    "eslint": "^5.14.1",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-import-resolver-alias": "^1.1.2",
    "eslint-plugin-import": "^2.16.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.12.4",
    "lerna": "^3.13.1",
    "lint-staged": "^8.1.4"
  }
}
